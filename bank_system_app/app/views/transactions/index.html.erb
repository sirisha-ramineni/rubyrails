<div class="card">
  <div class="card-header">All Transactions</div>
  
  <% if @transactions.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Account</th>
          <th>Account Holder</th>
          <th>Type</th>
          <th>Amount</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.formatted_date %></td>
            <td><%= transaction.account.account_number %></td>
            <td><%= transaction.account.account_holder %></td>
            <td>
              <span style="padding: 2px 6px; border-radius: 3px; 
                          background: <%= transaction.transaction_type == 'deposit' || transaction.transaction_type == 'interest' ? '#27ae60' : '#e74c3c' %>; 
                          color: white;">
                <%= transaction.transaction_type.capitalize %>
              </span>
            </td>
            <td><%= transaction.formatted_amount %></td>
            <td><%= transaction.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No transactions found.</p>
  <% end %>
</div>
