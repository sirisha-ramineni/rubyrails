<div class="card">
  <div class="card-header">
    Account Details - <%= @account.account_number %>
    <div style="float: right;">
      <%= link_to "Edit Account", edit_bank_account_path(@bank, @account), class: "btn" %>
      <%= link_to "Back to Bank", bank_path(@bank), class: "btn" %>
    </div>
  </div>
  
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 20px;">
    <div class="card">
      <h4>Account Holder</h4>
      <p style="font-size: 1.2em; margin: 0;"><%= @account.account_holder %></p>
    </div>
    <div class="card">
      <h4>Account Type</h4>
      <p style="font-size: 1.2em; margin: 0;">
        <span style="padding: 4px 8px; border-radius: 4px; 
                    background: <%= @account.account_type == 'savings' ? '#3498db' : '#e74c3c' %>; 
                    color: white;">
          <%= @account.account_type.capitalize %>
        </span>
      </p>
    </div>
    <div class="card">
      <h4>Current Balance</h4>
      <p style="font-size: 2em; margin: 0; color: #27ae60;">$<%= number_with_precision(@account.balance, precision: 2) %></p>
    </div>
  </div>
  
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 20px;">
    <div class="card">
      <h4>Deposit Money</h4>
      <%= form_with url: deposit_bank_account_path(@bank, @account), method: :patch, local: true do |form| %>
        <div class="form-group">
          <%= form.number_field :amount, step: 0.01, min: 0.01, placeholder: "Amount", required: true %>
        </div>
        <%= form.submit "Deposit", class: "btn btn-success" %>
      <% end %>
    </div>
    
    <div class="card">
      <h4>Withdraw Money</h4>
      <%= form_with url: withdraw_bank_account_path(@bank, @account), method: :patch, local: true do |form| %>
        <div class="form-group">
          <%= form.number_field :amount, step: 0.01, min: 0.01, placeholder: "Amount", required: true %>
        </div>
        <%= form.submit "Withdraw", class: "btn btn-danger" %>
      <% end %>
    </div>
    
    <% if @account.account_type == 'savings' %>
      <div class="card">
        <h4>Add Interest</h4>
        <p>Add 2% interest to savings account</p>
        <%= form_with url: add_interest_bank_account_path(@bank, @account), method: :patch, local: true do |form| %>
          <%= form.submit "Add Interest", class: "btn btn-success" %>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <h3>Recent Transactions</h3>
  <% if @transactions.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Type</th>
          <th>Amount</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.formatted_date %></td>
            <td>
              <span style="padding: 2px 6px; border-radius: 3px; 
                          background: <%= transaction.transaction_type == 'deposit' || transaction.transaction_type == 'interest' ? '#27ae60' : '#e74c3c' %>; 
                          color: white;">
                <%= transaction.transaction_type.capitalize %>
              </span>
            </td>
            <td><%= transaction.formatted_amount %></td>
            <td><%= transaction.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No transactions found for this account.</p>
  <% end %>
</div>
