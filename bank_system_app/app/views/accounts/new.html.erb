<div class="card">
  <div class="card-header">Create New Account for <%= @bank.name %></div>
  
  <%= form_with model: [@bank, @account], local: true do |form| %>
    <% if @account.errors.any? %>
      <div class="alert">
        <h4><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h4>
        <ul>
          <% @account.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :account_holder %>
      <%= form.text_field :account_holder, placeholder: "Enter account holder name" %>
    </div>

    <div class="form-group">
      <%= form.label :account_type %>
      <%= form.select :account_type, [['Savings', 'savings'], ['Checking', 'checking']], 
                      { prompt: 'Select account type' } %>
    </div>

    <div class="form-group">
      <%= form.label :balance %>
      <%= form.number_field :balance, step: 0.01, min: 0, placeholder: "Initial balance (optional)" %>
    </div>

    <div>
      <%= form.submit "Create Account", class: "btn btn-success" %>
      <%= link_to "Cancel", bank_path(@bank), class: "btn" %>
    </div>
  <% end %>
</div>
